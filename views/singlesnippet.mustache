<head>
    <link rel="stylesheet" href="/styles.css">
</head>  
    {{#snippetLoad}}
    <div class="snippetCard">
        <div class = "snippetInfo">
        <h1 class="title">Title: {{title}}</h1>
        <p class = "singleSnippetBody">Body: {{body}}</p>
        <div class="stats">
            <p class = "singleSnippetNotes">Notes: {{notes}}</p>
            <h2>Language: {{language}}</h3>
            <h2>Tag(s): {{tags}}</h2>
        </div>
    <form class = "deleteSnippetForm" action="/deletesnippet/{{id}}" method="POST">          
        <input type="submit" name="_id" value="Delete Snippet"> 
    </form>      
    <form class = "editSnippetForm" action="/editsnippet/{{id}}">  
        <input type="submit" name="_id" value="Edit Snippet">   
    </form> 
        <a href = "http://localhost:3000/main"><button>Return to Home Page</button></a>
        </div>
    </div>
    {{/snippetLoad}}